<div class="jumbotron">
    <div class="container ">
        <h2 align="center" class="display-4">Admin Dashboard</h2>
    </div>
</div>
<br>


<section id="main">
    <div class="container">
        <div class="row">
            <div class="col-md-3">
                <div class="list-group">
                    <a href="/user/admin" class="list-group-item active main-color-bg">
                        <span class="glyphicon glyphicon-cog" aria-hidden="true"></span> Dashboard
                    </a>
                    
                    <a href="/add" class="list-group-item"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                        Products <span class="badge">{{Pcount}}</span></a>
                    <a href="users.html" class="list-group-item"><span class="glyphicon glyphicon-user" aria-hidden="true"></span>
                        Users <span class="badge">{{Ucount}}</span></a>
                </div>

                <div class="well">
                    <h4>Disk Space Used</h4>
                    <div class="progress">
                        <div class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100"
                            style="width: 60%;">
                            60%
                        </div>
                    </div>
                    <h4>Bandwidth Used </h4>
                    <div class="progress">
                        <div class="progress-bar" role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100"
                            style="width: 40%;">
                            40%
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-9">
                <!-- Website Overview -->
                <div class="panel panel-default">
                    <div class="panel-heading main-color-bg">
                        <h3 class="panel-title">Website Overview</h3>
                    </div>
                    <div class="panel-body">
                        <div class="col-md-4">
                            <div class="well dash-box">
                                <h2><span class="glyphicon glyphicon-user" aria-hidden="true"></span> {{Ucount}}</h2>
                                <h4>Users</h4>
                            </div>
                        </div>
                        
                        <div class="col-md-4">
                            <div class="well dash-box">
                                <h2><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> {{Pcount}}</h2>
                                <h4>Products</h4>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="well dash-box">
                                <h2><span class="glyphicon glyphicon-stats" aria-hidden="true"></span> {{Tcount}}</h2>
                                <h4>Visitors</h4>
                            </div>
                        </div>
                    </div>
                </div>


             

                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Latest Users</h3>
                    </div>
                    <div class="panel-body">
                        <table class="table table-striped table-hover">
                            <tr>
                                {{!-- <th scope="col">id</th> --}}
                                <th scope="col">Name</th>
                                <th scope="col">Email</th>
                                <th scope="col">Address</th>
                                <th scope="col">Phone</th>
                                <th scope="col">City</th>
                                <th scope="col">Country</th>
                                {{!-- <th scope="col">Admin</th> --}}
                                <th scope="col">Delete</th>
                            </tr>
                            </thead>
                            {{# each user }}
                            <tbody>
                                {{# each this }}
                                <tr>



                                    <td>{{ this.name }}</td>
                                    <td>{{ this.email }}</td>
                                    <td>{{ this.address }},{{this.post}}</td>
                                    <td>{{ this.phone }}</td>
                                    <td>{{ this.city }}</td>
                                    <td>{{ this.country }}</td>

                                    <td>

                                        <a href='/user/admin/delete/{{this.id}}'> <button type="submit" class="btn btn-primary">
                                                Delete
                                            </button>


                                        </a>
                                    </td>

                                </tr>
                                {{/each}}
                            </tbody>
                            {{/each}}
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>